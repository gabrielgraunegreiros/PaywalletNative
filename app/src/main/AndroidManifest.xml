<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.usil.proyectomoviles">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" /> <!-- Permiso para escribir en almacenamiento externo -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ProyectoMoviles">
        <activity
            android:name=".controller.CambiarPerfil"
            android:exported="false" />
        <activity
            android:name=".controller.Home"
            android:exported="false"
            android:theme="@style/Theme.ProyectoMoviles.NoActionBarAndStatusBar" />
        <activity
            android:name=".controller.ControllerRegistro"
            android:exported="false"
            android:theme="@style/Theme.ProyectoMoviles.NoActionBarAndStatusBar" />
        <activity
            android:name=".controller.MainActivity"
            android:exported="true"
            android:theme="@style/Theme.ProyectoMoviles.NoActionBarAndStatusBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>